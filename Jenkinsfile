pipeline {
  agent none
  stages {
    stage('Preparation') {
      steps {
        sleep(time: 1, unit: 'SECONDS')
        sleep(time: 2, unit: 'MINUTES')
        sleep(time: 1, unit: 'HOURS')
        sleep(time: 1, unit: 'DAYS')
        sleep(time: 1, unit: 'NANOSECONDS')
        sleep(time: 1, unit: 'MICROSECONDS')
        sleep(time: 1, unit: 'MILLISECONDS')
      }
    }
    stage('Build') {
      steps {
        echo '1'
      }
    }
    stage('Results') {
      steps {
        echo '1'
      }
    }
  }
}